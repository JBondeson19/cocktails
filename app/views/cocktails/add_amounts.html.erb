<h1>Specify Amounts for <%= @cocktail.name %></h1>

<% @cocktail.cocktail_ingredients.each do |ci| %>
    <%= form_for(ci) do |f| %>
        <%= f.label "Quantity of " +  ci.ingredient.name %>
        <%= f.number_field :quantity  %>
        <%= f.submit "Submit Ingredient Amounts" %>
    <% end %>
    <br>
<% end %>