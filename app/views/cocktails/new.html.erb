<h1>Make a Cocktail!</h1>
<%= form_for(@cocktail) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price, step: :any %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>

    <%= f.label :bars %>
    <%= f.collection_check_boxes :bar_ids, Bar.all, :id, :name %><br>
    <!-- # f.multiselect or whatever(:restaurant_id, Restaurant.all, :id, :name) -->
    <%= f.submit("Create Cocktail") %>
<% end %>